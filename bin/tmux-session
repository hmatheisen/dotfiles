#!/usr/bin/env bash

# A bash script I use when I start my terminal

# Don't do anything if already in a tmux session
# or if tmux does not exists
if [[ -z $TMUX ]] && type tmux &> /dev/null; then
  # if a tmux session already exists, attach to this session
  if pgrep tmux; then
    tmux attach-session -t Work
    # otherwise create a new session called "Work"
  else
    tmux new -s Work
  fi
fi
